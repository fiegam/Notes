<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.Mobile.Forms.NoteDetails.NoteDetailsPage"
             xmlns:local="clr-namespace:Notes.Mobile;assembly=Notes.Mobile"
             Title="Note">
  <!--<ContentPage.Resources>
    <ResourceDictionary>
      <local:Converters.InverseBooleanConverter x:Key="cnvInvert"></local:Converters.InverseBooleanConverter>
    </ResourceDictionary>
  </ContentPage.Resources>-->
  
  <StackLayout Padding="15">
    <Label Text="Title"></Label>
    <!--<Label Text="{Binding Note.Title}" IsVisible="{Binding TitleEditing, Converter={StaticResource cnvInvert}}"></Label>-->
    <Entry Text="{Binding Note.Title}" IsVisible="{Binding TitleEditing}" local:UnfocusedAttached.Command="{Binding SaveTitle}">
      
    </Entry>
    <Label Text="Body"></Label>
    <!--<Label Text="{Binding Note.Body}" IsVisible="{Binding BodyEditing, Converter={StaticResource cnvInvert}}"></Label>-->
    <Editor Text="{Binding Note.Body}" IsVisible="{Binding BodyEditing}" local:UnfocusedAttached.Command="{Binding SaveBody}"></Editor>
    <Button Text="Save" Command="{Binding SaveNote}"></Button>
  </StackLayout>
</ContentPage>